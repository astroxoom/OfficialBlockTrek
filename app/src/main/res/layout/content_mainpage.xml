<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blocktrekacademy.officialblocktrek.Mainpage"
    tools:showIn="@layout/activity_mainpage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="astroXoom"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/moneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money: P"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/moneyMain"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/usernameText" />

    <TextView
        android:id="@+id/moneyMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="100000"
        android:textColor="#065C27"
        app:layout_constraintLeft_toRightOf="@+id/moneyText"
        app:layout_constraintTop_toBottomOf="@+id/usernameText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/lastLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Login: "
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/lastLoginMain"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/moneyText" />

    <TextView
        android:id="@+id/lastLoginMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 week ago "
        android:textColor="@android:color/black"
        android:textStyle="italic"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/moneyMain"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/lastLoginText" />

    <TextView
        android:id="@+id/registrationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Date: "
        android:textColor="@android:color/black"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/moneyText"
        app:layout_constraintBaseline_toBaselineOf="@+id/registrationMain"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/moneyText" />

    <TextView
        android:id="@+id/registrationMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 week ago "
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/lastLoginMain"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/registrationText" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="#f2c300"
        android:onClick="logOut"
        android:text="Log Out"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
